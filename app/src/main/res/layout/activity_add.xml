<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.edu.myagenda.AddActivity">

    <Button
        android:id="@+id/btAÃ±adir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:onClick="guardarContacto"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        android:layout_marginRight="33dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/tvEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEdad" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Escribe el nombre"
        app:layout_constraintLeft_toRightOf="@+id/tvNombre"
        android:layout_marginLeft="19dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/etEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Escribe la edad"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/etNombre"
        app:layout_constraintLeft_toRightOf="@+id/tvEdad"
        android:layout_marginLeft="37dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Escribe el email"
        app:layout_constraintLeft_toRightOf="@+id/tvEmail"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/etEdad" />
</android.support.constraint.ConstraintLayout>
