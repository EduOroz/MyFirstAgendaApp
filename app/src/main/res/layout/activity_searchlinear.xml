<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.edu.myagenda.SearchActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEmailSearch"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="email" />

        <EditText
            android:id="@+id/etEmailSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Escribe un email a buscar"
            android:inputType="textPersonName" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btBuscarSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="buscarEmail"
            android:text="Buscar" />

        <Button
            android:id="@+id/btSalirSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cambiarActivityMain"
            android:layout_weight="1"
            android:text="Salir" />
    </LinearLayout>

</LinearLayout>
